set -e

PREFIX=/var/lib/mpkg
VERSION=0.3.0

die() {
	echo "Error: $*" >&2
	exit 1
}

get_value() {
	sed -n "/$1:/s,.*: *,,p"
}

files() {
	find "$1/" -type f | sed -e "s,^$1,," -e "\:^$PREFIX/:d"
}

package_tgz() {
	local tgzdir
	local pn
	tgzdir=${1:-.}
	pn=$(cat "$tgzdir$PREFIX/info/"*/control 2>/dev/null | get_value 'Package')
	if [ -z "$pn" ]; then
		die "$1: Invalid directory!"
	fi

	local pv
	pv=$(cat "$tgzdir$PREFIX/info/"*/control 2>/dev/null | get_value 'Version')
	pv=${pv:-0}
	local tgz
	tgz=${pn}_${pv}.tgz

	files "$tgzdir" >"$tgzdir$PREFIX/info/$pn/files"
	( cd "$tgzdir/" && tar czf "$OLDPWD/$tgz" --exclude="$1" -- * )
	echo "$tgz"
}

do_files() {
	files "${1:-.}"
}

usage() {
	cat <<EOF
Usage: ${0##*/} [OPTIONS] PACKAGE...
       ${0##*/} [OPTIONS] DIRECTORY...

Options:
 -f or --files         Print list of files.
 -h or --help          Display this message.
 -V or --version       Display the version.
EOF
}

parse_arguments() {
	FILES=false

	while [ $# -ne 0 ]; do
		if [ "$1" = "-l" ] || [ "$1" = "--files" ]; then
			FILES=true
		elif [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
			usage
			exit 0
		elif [ "$1" = "-V" ] || [ "$1" = "--version" ]; then
			echo $VERSION
			exit 0
		else
			args="$args $1"
		fi
		shift
	done
}

parse_arguments "$@"

if [ -z "$args" ]; then
	usage >&2
	echo  >&2
	die "Too few arguments!"
fi

for arg in $args; do
	if [ ! -d "$arg" ]; then
		die "$arg: No such directory!"
	fi

	if $FILES; then
		do_files "$arg"
	else
		package_tgz "$arg"
	fi
done
