set -e

PREFIX=/var/lib/mpkg
VERSION=0.2.0

die() {
	echo "Error: $*" >&2
	exit 1
}

control() {
	local pn
	pn=${1##*/}
	pn=${pn%.*}

	tar Oxzf "$1" "${PREFIX#*/}/info/$pn/control" 2>/dev/null ||
	tar Oxzf "$1" "${PREFIX#*/}/info/${pn%_*}/control"
	echo -n "Size: " && stat -c %s "$tgz"
	echo -n "MD5Sum: " && md5sum "$tgz" | cut -d' ' -f1
	echo -n "Filename: " && echo "$tgz"
	echo ""
}

usage() {
	cat <<EOF
Usage: ${0##*/} [OPTIONS] [DIRECTORY=./]

Options:
 -h or --help          Display this message.
 -V or --version       Display the version.
EOF
}

parse_arguments() {
	while [ $# -ne 0 ]; do
		if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
			usage
			exit 0
			echo $VERSION
		elif [ "$1" = "-V" ] || [ "$1" = "--version" ]; then
			echo $VERSION
			exit 0
		elif [ -z "$dir" ]; then
			if [ ! -d "$1" ]; then
				die "$1: No such directory!"
			fi

			dir="$1/"
			dir="${dir/\/\//\/}"
		else
			usage >&2
			echo  >&2
			die "Too many arguments!"
		fi
		shift
	done
}

parse_arguments "$@"

for tgz in ${dir:-./}*.tgz; do
	control "$tgz" | sed -e '/^$/d'
	echo ""
done
