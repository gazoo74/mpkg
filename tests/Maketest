MAKEFLAGS += -rR

.SILENT: all
.PHONY: all
all:

.SILENT: check
.PHONY: check
check:

.SILENT: clean
.PHONY: clean
clean:

PATH	:= $(PWD)/../bin:$(PATH)
O	?= $(shell echo "${TMPDIR:-/tmp}/mpkg-$$$$")
ROOTDIR	 = $(O)root
TGZDIR	 = $(O)tgz/

.SILENT: $(O)
.PHONY: $(O)
$(O):
	mkdir -p $@

repos := local
local-uri := file://$(TGZDIR)Index
$(ROOTDIR)/etc/mpkg/repo.d/local.conf: $(TGZDIR)Index

.SILENT: Testfile
Testfile:
	$(error No targets specified and no Testfile found)

check: rootfs

-include Testfile mpkg.mk

all: check
	$(MAKE) -f$(firstword $(MAKEFILE_LIST)) clean
	rmdir $(O)

