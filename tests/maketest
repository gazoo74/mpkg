set -e

DATADIR="${DATADIR:-$PWD}"

tmpdir="$(mktemp -d ${TMPDIR:-/tmp}/${0##*/}-XXXXXX)"
trap 'rm -Rf "$tmpdir"' 0

make "O=$tmpdir/" \
     "-I$DATADIR" \
     "-f$DATADIR/Maketest" \
     "--no-print-directory" \
     "$@"
